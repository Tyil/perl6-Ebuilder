#! /usr/bun/env perl6

use v6.c;

use Ebuilder;

sub MAIN(*@files)
{
	for @files -> $file {
		make-ebuild-from-meta6($file);

		# Ensure the directory structure exists
		mkdir("dev-perl");

		my Str $atom-name = atom-name(%meta<name>, 9999);

		spurt("{$atom-name}.ebuild", $output);

		say "Saved $atom-name";
	}
}
